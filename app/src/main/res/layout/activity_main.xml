<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">


    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/blanc"
        app:layout_constraintBottom_toTopOf="@+id/joystickLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joystickLayout" />

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@color/blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textConnection" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/blanc"
        app:layout_constraintBottom_toTopOf="@+id/joystickLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consoleLayout" />

    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/blanc"
        app:layout_constraintBottom_toTopOf="@+id/tiltLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joystickLayout2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/audiowide"
        android:text="MENU"
        android:textAllCaps="true"
        android:textColor="#D8D8D8"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/audiowide"
        android:text="Aéroglisseur : "
        android:textColor="@color/blanc"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/audiowide"
        android:text="Choisis un type de commande"
        android:textAllCaps="false"
        android:textColor="#D8D8D8"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joystickLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/blanc"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tiltLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joystickLayout"
        app:layout_constraintVertical_chainStyle="spread">

        <ImageButton
            android:id="@+id/joystick2Image"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/joystick"
            android:text="Connexion"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/textJoystick22"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightChevron3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/textJoystick23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rightchevron" />

        <TextView
            android:id="@+id/textJoystick23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/audiowide"
            android:text="Contrôle la vitesse et direction avec 2 joysticks différents"
            android:textColor="@color/blanc"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/rightChevron3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textJoystick22" />

        <TextView
            android:id="@+id/textJoystick22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/audiowide"
            android:text="JOYSTICK 2"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="Joystick 2"
            app:layout_constraintStart_toEndOf="@+id/joystick2Image"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tiltLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/blanc"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joystickLayout2"
        app:layout_constraintVertical_chainStyle="spread">

        <ImageButton
            android:id="@+id/tilt2Image"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/gyroscope"
            android:text="Connexion"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/texttilt22"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightChevron4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/texttilt23"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rightchevron" />

        <TextView
            android:id="@+id/texttilt23"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/audiowide"
            android:text="Contrôle la vitesse et direction avec l'inclinaison du téléphone"
            android:textColor="@color/blanc"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/rightChevron4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texttilt22" />

        <TextView
            android:id="@+id/texttilt22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/audiowide"
            android:text="GYROSCOPE"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="Gyroscope"
            app:layout_constraintStart_toEndOf="@+id/tilt2Image"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joystickLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/blanc"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/joystickLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consoleLayout"
        app:layout_constraintVertical_chainStyle="spread">

        <ImageButton
            android:id="@+id/joystickImage"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/joystick"
            android:text="Connexion"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/textJoystick2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightChevron2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/textJoystick3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rightchevron" />

        <TextView
            android:id="@+id/textJoystick3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/audiowide"
            android:text="Contrôle la vitesse et direction avec un unique joystick"
            android:textColor="@color/blanc"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/rightChevron2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textJoystick2" />

        <TextView
            android:id="@+id/textJoystick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/audiowide"
            android:text="JOYSTICK"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="Joystick"
            app:layout_constraintStart_toEndOf="@+id/joystickImage"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consoleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/blanc"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/joystickLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7"
        app:layout_constraintVertical_chainStyle="spread">

        <ImageButton
            android:id="@+id/consoleImage"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/console"
            android:text="Connexion"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/textConsole"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rightChevron"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/blanc"
            app:layout_constraintBottom_toBottomOf="@+id/textConnection3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rightchevron" />

        <TextView
            android:id="@+id/textConnection3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/audiowide"
            android:text="Envoie la consigne de vitesse et direction sous forme textuelle"
            android:textColor="@color/blanc"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/rightChevron"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textConsole" />

        <TextView
            android:id="@+id/textConsole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/audiowide"
            android:text="CONSOLE"
            android:textColor="@color/blanc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:transitionName="Console"
            app:layout_constraintStart_toEndOf="@+id/consoleImage"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="@color/blanc"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/settings" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/audiowide"
        android:text="Par Nicolas BESNARD"
        android:textColor="@color/bleuH"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tiltLayout2"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>